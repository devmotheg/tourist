extends ../index

include ../helpers/_mixins

block content
  div(class="wrapper")
    form(class="max-w-[44rem] mx-auto p-10 rounded-lg shadow-lg bg-white" novalidate spellcheck="false")
      strong(class="mb-6 text-2xl special-heading") send an email with password reset token
      div(class="mb-8")
        +form-label("email", "email address")
        +form-input("email", "email", "you@example.com", "email", null)
      div
        button(class="py-2 px-8 mx-auto uppercase border-[0.15rem] border-solid rounded-full w-fit btn border-neutral-500") send token